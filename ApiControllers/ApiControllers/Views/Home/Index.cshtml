@model IEnumerable<ApiControllers.Models.Reservation>

@{ Layout = "_Layout"; }

<form asp-action="AddReservation" method="post">
    <div class="form-group">
        <label for="ClientName">Name:</label>
        <input class="form-control" name="ClientName" />
    </div>
    <div class="form-group">
        <label for="Location">Location:</label>
        <input class="form-control" name="Location" />
    </div>
    <div class="text-center panel-body">
        <button id="ololo" type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>
